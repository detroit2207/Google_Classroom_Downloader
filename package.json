{
  "name": "google-classroom-downloader",
  "version": "1.0.0",
  "description": "Google Classroom Downloader",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.yourname.classroomdownloader",
    "win": {
      "target": "nsis",
      "icon": "satoru-gojo.ico"
    },
    "files": [
      "**/*",
      "!node_modules/.cache",
      "!dist"
    ],

    "asarUnpack": [
      "resources/downloader.py"
    ]
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "gsap": "^3.13.0"
  }
}
